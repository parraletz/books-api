{
  "name": "books-api",
  "version": "8.1.0",
  "description": "Books API built with Hono and Bun",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "prepare": "[ -d .git ] && husky install || true",
    "docker:dev": "docker-compose up",
    "docker:dev:build": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:down:volumes": "docker-compose down -v",
    "docker:logs": "docker-compose logs -f api",
    "docker:prod:build": "docker build -t books-api:latest .",
    "docker:prod:run": "docker run -p 3000:3000 books-api:latest"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.4.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.211.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.211.0",
    "@opentelemetry/resources": "1.25.0",
    "@opentelemetry/sdk-metrics": "^2.5.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@opentelemetry/sdk-trace-node": "^2.5.0",
    "@opentelemetry/semantic-conventions": "1.25.0",
    "hono": "^4.11.3",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "husky": "^8.0.3"
  },
  "scripts-comments": {
    "prepare": "Instala los hooks de Git automáticamente después de npm/bun install"
  }
}